<hc:Window
    x:Class="SmartCode.Tool.Views.ExportDoc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartCode.Tool.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="导出文档"
    Width="540"
    Height="330"
    BorderThickness="0"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="5" Background="White">
        <Grid Margin="20">
            <TextBlock VerticalAlignment="Top" Text="目标数据" />
            <RadioButton
                Margin="110,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="当前数据库"
                IsChecked="True" />
            <RadioButton
                Margin="210,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="当前菜单结果集" />
        </Grid>
        <Grid Margin="20">
            <TextBlock
                Margin="0,50,0,0"
                VerticalAlignment="Top"
                Text="导出路径" />
            <TextBox Margin="110,40,125,0" VerticalAlignment="Top" />
            <Button
                Margin="0,40,60,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="浏览..." />
        </Grid>
        <Grid Margin="20">
            <TextBlock
                Margin="0,105,0,0"
                VerticalAlignment="Top"
                Text="文档类型" />
            <hc:ButtonGroup Margin="110,100,0,0" Style="{StaticResource ButtonGroupSolid}">
                <RadioButton hc:IconElement.Geometry="{StaticResource CalendarGeometry}" Content="CHM" />
                <RadioButton hc:IconElement.Geometry="{StaticResource CalendarGeometry}" Content="Word" />
                <RadioButton hc:IconElement.Geometry="{StaticResource CalendarGeometry}" Content="PDF" />
                <RadioButton hc:IconElement.Geometry="{StaticResource CalendarGeometry}" Content="Excel" />
            </hc:ButtonGroup>
        </Grid>

    </Grid>
</hc:Window>
