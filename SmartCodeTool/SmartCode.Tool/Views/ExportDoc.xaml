<hc:Window
    x:Class="SmartCode.Tool.Views.ExportDoc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartCode.Tool.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="导出文档"
    Width="540"
    Height="330"
    BorderThickness="0"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ArrowToggleStyle1" TargetType="ToggleButton">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid>
                                <Image
                                    x:Name="leftArrowImg"
                                    Width="25"
                                    Height="25"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                <Image
                                    x:Name="rightArrowImg"
                                    Width="25"
                                    Height="25"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                <ContentPresenter
                                    x:Name="content1"
                                    Margin="35,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Content="{TemplateBinding Content}" />
                                <ContentPresenter
                                    x:Name="content2"
                                    Margin="35,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Content="{TemplateBinding Content}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="leftArrowImg" Property="Visibility" Value="Hidden" />
                                <Setter TargetName="rightArrowImg" Property="Visibility" Value="Visible" />
                                <Setter TargetName="content1" Property="Visibility" Value="Hidden" />
                                <Setter TargetName="content2" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="leftArrowImg" Property="Visibility" Value="Visible" />
                                <Setter TargetName="rightArrowImg" Property="Visibility" Value="Hidden" />
                                <Setter TargetName="content1" Property="Visibility" Value="Visible" />
                                <Setter TargetName="content2" Property="Visibility" Value="Hidden" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="False" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="Gainsboro" />
                            </MultiTrigger>
                            <Trigger Property="Content" Value="WORD">
                                <Setter TargetName="leftArrowImg" Property="Source" Value="../Resources/Img/doc/WORD.png" />
                                <Setter TargetName="rightArrowImg" Property="Source" Value="../Resources/Img/doc/WORD.png" />
                            </Trigger>
                            <Trigger Property="Content" Value="EXCEL">
                                <Setter TargetName="leftArrowImg" Property="Source" Value="../Resources/Img/doc/EXCEL.png" />
                                <Setter TargetName="rightArrowImg" Property="Source" Value="../Resources/Img/doc/EXCEL.png" />
                            </Trigger>
                            <Trigger Property="Content" Value="PDF">
                                <Setter TargetName="leftArrowImg" Property="Source" Value="../Resources/Img/doc/PDF.png" />
                                <Setter TargetName="rightArrowImg" Property="Source" Value="../Resources/Img/doc/PDF.png" />
                            </Trigger>
                            <Trigger Property="Content" Value="HTML">
                                <Setter TargetName="leftArrowImg" Property="Source" Value="../Resources/Img/doc/HTML.png" />
                                <Setter TargetName="rightArrowImg" Property="Source" Value="../Resources/Img/doc/HTML.png" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Margin="5,5,5,35" Background="White">
            <Grid Margin="20">
                <TextBlock VerticalAlignment="Top" Text="目标数据" />
                <RadioButton
                    Margin="85,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="当前数据库"
                    IsChecked="True" />
                <RadioButton
                    Margin="185,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="当前菜单结果集" />
            </Grid>
            <Grid Margin="20,25,20,20">
                <TextBlock
                    Margin="0,50,0,0"
                    VerticalAlignment="Top"
                    Text="导出路径" />
                <TextBox Margin="85,45,125,0" VerticalAlignment="Top" />
                <Button
                    Width="100"
                    Margin="0,45,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="浏览..." />
            </Grid>
            <Grid Margin="20,125,20,20">
                <TextBlock
                    Margin="0,15,0,0"
                    VerticalAlignment="Top"
                    Text="文档类型" />
                <ToggleButton
                    Width="80"
                    Margin="85,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="EXCEL"
                    Style="{StaticResource ArrowToggleStyle1}" />
                <ToggleButton
                    Width="83"
                    Margin="175,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="WORD"
                    Style="{StaticResource ArrowToggleStyle1}" />
                <ToggleButton
                    Width="70"
                    Margin="268,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="PDF"
                    IsChecked="True"
                    Style="{StaticResource ArrowToggleStyle1}" />
                <ToggleButton
                    Width="80"
                    Margin="348,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="HTML"
                    IsChecked="True"
                    Style="{StaticResource ArrowToggleStyle1}" />
            </Grid>
        </Grid>
        <hc:SimpleStackPanel
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <hc:UniformSpacingPanel Spacing="10">
                <Button
                    x:Name="BtnExport"
                    Height="25"
                    Padding="20,0,20,0"
                    Content="导出"
                    Cursor="Hand"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    x:Name="BtnCancel"
                    Height="25"
                    Padding="20,0,20,0"
                    Content="取消"
                    Cursor="Hand" />
            </hc:UniformSpacingPanel>
        </hc:SimpleStackPanel>

    </Grid>
</hc:Window>
