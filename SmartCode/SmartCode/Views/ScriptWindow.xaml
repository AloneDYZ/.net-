<hc:Window
    x:Class="SmartCode.Views.ScriptWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:controls="clr-namespace:SmartCode.UserControl.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartCode.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="SQL脚本"
    Width="600"
    Height="410"
    BorderThickness="0"
    Icon="../Resources/Img/doc.ico"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Loaded="ScriptWindow_OnLoaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            Name="TabSql"
            Margin="5"
            Style="{StaticResource TabControlBaseStyle}"
            TabStripPlacement="Left">
            <TabItem
                Name="TabCreateSql"
                Header="CREATE"
                IsSelected="True">
                <controls:SqlScript x:Name="TxtCreateSql" />
            </TabItem>
            <TabItem Name="TabSelectSql" Header="SELECT">
                <controls:SqlScript x:Name="TxtSelectSql" />
            </TabItem>
            <TabItem Name="TabInsertSql" Header="INSERT">
                <controls:SqlScript x:Name="TxtInsertSql" />
            </TabItem>
            <TabItem Name="TabUpdateSql" Header="UPDATE">
                <controls:SqlScript x:Name="TxtUpdateSql" />
            </TabItem>
            <TabItem Name="TabDeleteSql" Header="DELETE">
                <controls:SqlScript x:Name="TxtDeleteSql" />
            </TabItem>
        </TabControl>
    </Grid>
</hc:Window>
