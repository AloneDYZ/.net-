<local:BaseUserControl
    x:Class="SmartSQL.UserControl.UcMD5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartSQL.UserControl"
    xmlns:localControls="clr-namespace:SmartSQL.UserControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SmartSQL.Models"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:userControl="clr-namespace:SmartSQL.UserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="BaseUserControl_Loaded"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Background="White"
        CornerRadius="8">
        <Grid>
            <hc:ScrollViewer Margin="10,15,10,15">
                <hc:WaterfallPanel
                    VerticalAlignment="Top"
                    hc:PanelElement.FluidMoveBehavior="{StaticResource BehaviorX200}"
                    Groups="5">
                    <localControls:UcToolCard Title="SQL格式化111" Icon="/SmartSQL;component/Resources/Img/toolIcon/sql-formatter@2x.png" />
                    <localControls:UcToolCard Title="JSON格式化" Icon="/SmartSQL;component/Resources/Img/toolIcon/json@2x.png" />
                </hc:WaterfallPanel>
            </hc:ScrollViewer>
        </Grid>
    </Border>
</local:BaseUserControl>
