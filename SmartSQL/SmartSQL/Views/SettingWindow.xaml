<hc:Window
    x:Class="SmartSQL.Views.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartSQL.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="设置"
    Width="550"
    Height="330"
    Icon="../Resources/Img/icon_setting.png"
    BorderThickness="0"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" MinWidth="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Margin="5" Background="#f5f5f5">
            <ListBox
                Name="ListGroup"
                Margin="5"
                BorderThickness="0"
                ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBoxItem
                    Name="ListItemRoutine"
                    Focusable="True"
                    IsSelected="True">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="12"
                            Height="12"
                            Margin="2,0,0,0"
                            HorizontalAlignment="Left"
                            FontFamily="pack://application:,,,/Resources/Fonts/#IconFont"
                            FontSize="12"
                            Foreground="#e9af20"
                            Text="&#xe605;" />
                        <TextBlock Margin="10,0,0,0" Text="常规" />
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </Grid>
        <Grid
            Grid.Column="1"
            Margin="0,5,5,5"
            Background="White">
            <CheckBox
                Name="ChkIsMultipleTab"
                Margin="36,30,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="主窗口多标签展示"
                IsChecked="True" />
            <CheckBox
                Name="ChkIsLikeSearch"
                Margin="36,60,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="对象名模糊搜索"
                IsChecked="True" />
            <hc:SimpleStackPanel
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <hc:UniformSpacingPanel Spacing="10">
                    <Button
                        x:Name="BtnSave"
                        Height="25"
                        Padding="20,0,20,0"
                        Click="BtnSave_OnClick"
                        Content="保存"
                        Cursor="Hand"
                        Style="{StaticResource ButtonPrimary}" />
                    <Button
                        x:Name="BtnCancel"
                        Height="25"
                        Padding="20,0,20,0"
                        Click="BtnCancel_OnClick"
                        Content="取消"
                        Cursor="Hand" />
                </hc:UniformSpacingPanel>
            </hc:SimpleStackPanel>
        </Grid>
    </Grid>
</hc:Window>
