<hc:Window
    x:Class="SmartSQL.Views.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Title="关于SmartSQL"
    Width="460"
    Height="260"
    BorderThickness="0"
    Icon="/favicon.ico"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    ShowTitle="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <hc:SimplePanel Background="White">
        <svgc:SvgViewbox
            Name="SvgViewboxForkMe"
            Width="80"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseLeftButtonUp="SvgViewboxForkMe_OnMouseLeftButtonUp"
            Source="../Resources/svg/forkme.svg" />
        <Image
            Width="40"
            Height="40"
            Margin="0,16,0,0"
            VerticalAlignment="Top"
            Source="../favicon.ico"
            Stretch="Uniform" />
        <StackPanel
            Margin="0,64,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="30"
                Foreground="{StaticResource PrimaryBrush}"
                Text="SmartSQL" />
            <TextBlock
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="{Binding Description}" />
        </StackPanel>
        <hc:Shield
            Margin="55,0,0,48"
            VerticalAlignment="Bottom"
            Status="zfluok"
            Subject="author"
            Color="#4eb899" />
        <hc:Shield
            Margin="0,0,0,48"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Status="Apache"
            Subject="license"
            Color="#d8624c" />
        <hc:Shield
            Margin="315,0,0,48"
            VerticalAlignment="Bottom"
            Status="{Binding Version}"
            Subject="version"
            Color="#1192d1" />
        <TextBlock
            Margin="0,0,0,8"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Foreground="{StaticResource ThirdlyTextBrush}"
            Text="{Binding CopyRight}" />
    </hc:SimplePanel>
</hc:Window>
